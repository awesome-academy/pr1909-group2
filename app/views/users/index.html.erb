
<% provide(:title, "All users") %>
<h1>All users</h1>

<ul class="users">
 <% @users.each do |user| %>
   <li>
     <%= link_to user.name, users_path %>
 <% if current_user.admin? && !current_user?(user) %>
   | <%= link_to "delete", admin_destroy_user_path(user), method: :delete %>
 <% end %>
   </li>
 <% end %>
</ul>
<%= will_paginate %>
