~<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "LMSBook", root_path, id: "logo" %>
    <nav>
      <% if user_signed_in? %>
      <ul class="nav navbar-nav1 navbar-right">
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=
          t("header.user") %><b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to t("admin.personal_information"), user_path(current_user) %></li>
          <li><%= link_to t("admin.edit_profile"), edit_user_registration_path %></li>
          <li><%= link_to t("header.logout"), destroy_user_session_path %></li>
        </ul>
      </ul>
        <% if current_user && current_user.admin? %>
          <ul class="nav navbar-nav2 navbar-right">
            <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Admin <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("admin.user_management"), users_path  %></li>
            <li><%= link_to t("header.create_book"), new_book_path %></li>
            <li><%= link_to t("header.create_publisher"), new_publisher_path %></li>
            <li><%= link_to t("header.create_author"), new_author_path %></li>
        <% end %>
      </ul>
        <% else %>
          <ul class= "nav navbar-nav navbar-right">
            <li><%= link_to t("header.login"), new_user_session_path %></li>
            <li><%= link_to t("header.signup"), new_user_registration_path %></li>
          </ul>
        <% end %>
    </nav>
  </div>

  <div id="menu">
    <ul>
      <li><%= link_to t("header.home"), root_path %></li>
      <li><%= link_to t("header.library"), "#" %>
        <ul class="sub-menu">
          <% Book::TYPE_BOOK.each do |book| %>
            <li><%= link_to book, root_path(type_book: book) %></li>
          <% end %>
        </ul>
      </li>
      <li><%= link_to t("header.author"), authors_path %></li>
      <li><%= link_to t("header.publisher"), "#" %></li>
    </ul>
  </div>
</header>
