<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4" style="background-color:#0057a3;height: 56px;padding-left: 80px;">
      <svg class="bi bi-play iconlogo" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10.804 8L5 4.633v6.734L10.804 8zm.792-.696a.802.802 0 0 1 0 1.392l-6.363 3.692C4.713 12.69 4 12.345 4 11.692V4.308c0-.653.713-.998 1.233-.696l6.363 3.692z"/>
      </svg>
      <%= link_to "LiveScore", root_path, id: "logo" %>
    </div>
    <div class="col-sm-8" style="background-color:#0057a3;height: 56px;">
      <div class="col-sm-3" style="background-color:#0057a3;height: 56px;"></div>
      <div class="col-sm-5" style="background-color:#0057a3;height: 56px;"></div>
      <% if user_signed_in? %>
      <div class="col-sm-2" style="background-color:#0057a3;height: 56px;padding-left: 25px;">
        <svg class="bi bi-person-circle iconlogo-4" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
          <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
          <path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
        </svg>
        <%= link_to current_user.name, user_path(current_user) , id: "tool" %>
      </div>
      <div class="col-sm-2 logout" style="background-color:#0057a3;height: 56px;">
        <i class="fa fa-sign-out" aria-hidden="true"></i>
        <%= link_to t("header.logout"), destroy_user_session_path, id: "tool" %>
      </div>
      <% else %>
      <div class="col-sm-2" style="background-color:#0057a3;height: 56px;padding-left: 25px;">
        <svg class="bi bi-person-plus-fill iconlogo-3" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm7.5-3a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
          <path fill-rule="evenodd" d="M13 7.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z"/>
        </svg>
        <%= link_to t("header.signup"), new_user_registration_path, id: "tool" %>
      </div>
      <div class="col-sm-2 signin" style="background-color:#0057a3;height: 56px;">
        <i class="fa fa-sign-in" aria-hidden="true"></i>
        <%= link_to t("header.login"), user_session_path, id: "tool" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row header-row">
    <div class="header-none"></div>
      <% Tournament.all.each do |tournament| %>
      <div class="col-sm-1 NHA">
        <%= link_to tournament.name , tournament, id: "name-league-header" %>
      </div>
      <% end %>
    <div class="col-sm-1 none"></div>
      <div class="col-sm-1" style="background-color:#004c8f;height: 56px;padding-left: 12%;padding-top:17px;">
        <div class="dropdown show">
          <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-cog" aria-hidden="true"></i>
          </a>
          <div class="dropdown-menu setting-icon" aria-labelledby="dropdownMenuLink">
            <h5 id="language"><%= t("header.language") %></h5>
            <hr>
            <div class="vietnam"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a6/Flag_of_North_Vietnam_%281955%E2%80%931975%29.svg/220px-Flag_of_North_Vietnam_%281955%E2%80%931975%29.svg.png" alt="Trulli" width="15" height="15" magrin-left="5px"><%= link_to "Vietnamese", locale:"vi" %></div>
            <div class="vietnam"><img src="data:image/png;base64," alt="Trulli" width="15" height="15" magrin-left="5px"><%= link_to "English", locale:"en" %></div>
          </div>
        </div>
    </div>
  </div>
</div>
