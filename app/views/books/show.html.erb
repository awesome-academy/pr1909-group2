<% provide(:title, @book.name) %>
<div class="container-showbook">
  <div id="title">
    <h2>
      <%= @book.name %>
    </h2>
  </div>

  <div id="image">
    <%= image_tag @book.image.url if @book.image? %>
  </div>
    <% if current_user.try(:admin?) %>
      <ul class="edit-book">
        <li><%= link_to t("show.edit_book"), edit_book_path %></li>
      </ul>
    <% end %>

  <div id="describe">
    <h3>
      <%= @book.describe %>
    </h3>
  </div>
</div>
