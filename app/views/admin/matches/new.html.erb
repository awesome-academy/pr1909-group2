<% provide :title, "Match" %>
<h3 id="signup-form"><%= t("header.create_match") %></h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3-edit-user">
    <%= form_for :match, url: {action: :create, controller: :matches}, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :home_team_id %>
        <%= f.select :home_team_id, options_for_select(@teams.map{|key, value|
          [key, value]}), {class: "chosen-select"} %>
      </div>
      <div class="form-group">
        <%= f.label :away_team_id %>
        <%= f.select :away_team_id, options_for_select(@teams.map{|key, value|
          [key, value]}), {class: "chosen-select"} %>
      </div>
      <div class="form-group">
        <%= f.label :tournament_id %>
        <%= f.select :tournament_id, options_for_select(@tournaments.map{|key, value|
          [key, value]}),{} , { class: "selectpicker", "data-live-search" => true,
        "data-live-search-style" => "startsWith" } %>
      </div>
        <%= f.label :start_match %>
        <%= f.datetime_field :start_match  %><br>
        <%= f.label :end_match %>
        <%= f.datetime_field :end_match  %>
      <%= f.submit t("header.create_match"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
