<div>
  <table class="table table-hover table-admin">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Team</th>
        <th>Nationality</th>
        <th>Shirt_number</th>
        <th>Create At</th>
      </tr>
    </thead>
    <% @players.each do |player| %>
      <tr>
        <td>
          <%= player.id %>
        </td>
        <td>
          <%= player.name %>
        </td>
        <td>
          <%= player.team.name %>
        </td>
        <td>
          <%= player.nationality %>
        </td>
        <td>
          <%= player.shirt_number %>
        </td>
        <td>
          <%= player.created_at %>
        </td>
        <td>
          <%= link_to "View", player_path(player) %>
          <%= link_to "Edit", edit_admin_player_path(player) %>
          <%= link_to "Delete", admin_player_path(player), method: :delete, data: {confirm: "You sure?"} %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
