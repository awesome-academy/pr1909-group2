<% provide(:title, @team.name) %>
<div class="container-fluid warp">
  <%= link_to "Livescore", root_path , id: "home" %>
  >>
  <%= link_to @team.name, @team , id: "name" %>
  <div class="container content">
    <div class="row grade">
      <div class="col-sm-8 tab-left">
        <div id="image">
          <%= link_to image_tag(@team.logo.url), @team , id: "image-player"%>
        <span id="name-player"><%= @team.name %></span>
        (<%= @team.country %>)
        </div>
        <div class="type-2">
          <div id="player-team">Players</div>
          <div id="box-list-player">
            <% @players.each do |player| %>
              <div id="from-player">
                <div id="image-player-2"><%= link_to image_tag(player.image.url), player %></div>
                <div id="name-player-2"><%= link_to player.name, player %></div>
                <div id="tab-bottom">
                  <span id="preferred_foot-player-2"><%= player.preferred_foot %></span>
                  <span id="nationality-player-2"><%= player.nationality %></span>
                </div>
              </div>
            <% end %>
          </div>
    </div>
  </div>
      <div class="col-sm-4 tab-right">
        <div id="image">
          <%= link_to image_tag(@tournament.picture.url), @tournament , id: "image-tournament"%>
          <span id="name-tournament">
            <%= @tournament.name %>
            <span>(<%= @tournament.teams.size %> Team)</span>
          </span>
        </div>
        <div>
        <div id="standings">STANDINGS</div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th><%= sort_link(@q, :p) %></th>
              <th><%= sort_link(@q, :w) %></th>
              <th><%= sort_link(@q, :d) %></th>
              <th><%= sort_link(@q, :l) %></th>
              <th><%= sort_link(@q, :goals) %></th>
              <th><%= sort_link(@q, :point, 'PTS') %></th>
            </tr>
          <% @teams.each do |team| %>
            <tr>
              <td class="btn btn-success" id="stt-button">
                <%= @stt = @stt + 1 %>
              </td>
              <td class="space-team">
                <%= link_to image_tag(team.logo.url), team, id: "logo-team-stading" %>
                <%= link_to team.name, team, id: "name-team-stading" %>
              </td>
              <td>
                <%= team.matches.select {|m| m["status"] == "started"}.size %>
              </td>
              <td>
                <%= team.w %>
              </td>
              <td>
                <%= team.d %>
              </td>
              <td>
                <%= team.l %>
              </td>
              <td>
                <%= team.goals %>
              </td>
              <td>
                <%= team.point %>
              </td>
            </tr>
          <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>
