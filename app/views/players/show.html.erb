<% provide(:title, @player.name) %>
<div class="container-fluid warp">
  <%= link_to "Infoscore", root_path , id: "home" %>
  >>
  <%= link_to @player.name, @player , id: "name" %>
  <div class="container content">
    <div class="row grade">
      <div class="col-sm-8 tab-left">
        <div id="image">
          <%= link_to image_tag(@player.image.url), @player , id: "image-player"%>
          <span id="name-player"><%= @player.name %></span>
        </div>
        <div class="type">
          <div class="row">
            <div class="col-sm-5">
              <div class="team-name">
                <span id="logo-player"><%= image_tag (@player.team.logo.url if @player.team.logo?)%></span>
                <span id="text-player-show-1"><%= link_to @player.team.name, @player.team  %></span>
              </div>
              <div class="information">
                <div class="information-1">
                  <div class="information-1-1">
                    <div id="height-player"><%= @player.nationality %></div>
                    <div id="text-player-show-2"><%= t("players.nationality") %></div>
                  </div>
                  <div class="information-1-1">
                    <div id="height-player"><%= @player.age %></div>
                    <div id="text-player-show-2"><%= Date.today %></div>
                  </div>
                  <div class="information-1-1">
                    <div id="height-player"><%= @player.height %>&nbspcm</div>
                    <div id="text-player-show-2"><%= t("players.height")%></div>
                  </div>
                </div>
                <div class="information-2">
                  <div class="information-1-1">
                    <div id="height-player"><%= @player.weight %></div>
                    <div id="text-player-show-2"><%= t("players.weight") %></div>
                  </div>
                  <div class="information-1-1">
                    <div id="height-player"><%= @player.preferred_foot %></div>
                    <div id="text-player-show-2"><%= t("players.preferred_foot") %></div>
                  </div>
                  <div class="information-1-1">
                    <div id="height-player"><%= @player.shirt_number %></div>
                    <div id="text-player-show-2"><%= t("players.shirt_number") %></div>
                  </div>
                </div>
              </div>
            </div>
            <div style="border-left:1px solid #BBBBBB;height:250px"></div>
            <div class="col-sm-6">
              <div class="information-3">
                <%= link_to image_tag(@player.diagram.url), @player , id: "diagram-player"%>
              </div>
              <div class="information-4">
                <div id="text-player-show-3"><%= t("players.strengths") %></div>
                <div id="text-player-show-4"><%= @player.strengths %></div>
                <div id="text-player-show-3"><%= t("players.weaknesses") %></div>
                <div id="text-player-show-4"><%= @player.weaknesses %></div>
              </div>
            </div>
          </div>
        </div>
        <div id="standings">
          <%= t("team.matches") %>
        </div>
        <div class="show-league-match">
      <% @match_waits.each do |match_wait| %>
        <div class="col-sm-12">
          <div class="start-match">
            <h5 id="start-match"><%= match_wait.start_match %></h5>
          </div>
          <div class="col-sm-6">
            <div class="img-home-team-league">
              <%= link_to image_tag(match_wait.home_team.logo.url), match_wait.home_team, id: "img-home-team-league" %>
              <i class="fa fa-window-minimize score-home-league" aria-hidden="true"></i>
            </div>
            <div>
              <h4 id="name-home-team-league"><%= link_to match_wait.home_team.name, match_wait.home_team %></h4>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="img-away-team-league">
              <i class="fa fa-window-minimize score-away" aria-hidden="true"></i>
              <%= link_to image_tag(match_wait.away_team.logo.url), match_wait.away_team, id: "img-away-team-league" %>
            </div>
            <div>
              <h4 id="name-away-team-league"><%= link_to match_wait.away_team.name, match_wait.away_team %></h4>
            </div>
          </div>
        </div>
      <% end %>
    </div>
      </div>
      <div class="col-sm-4 tab-right">
        <div id="top-player"><%= t("home.top_players") %></div>
        <ul class="top_player">
          <% @top_players.each do |player| %>
            <li>
              <%= link_to image_tag(player.image.url), player , id: "image-player"%>
              <%= link_to image_tag(player.team.logo.url), player , id: "image-player-sala"%>
              <span><%= link_to player.name, player , id: "name-top-player" %></span>
              <span class="card bg-success text-white point">
                <span class="card-body point-2"><%= player.point %></span>
              </span>
            </li>
          <% end %>
          <%= will_paginate @top_players %>
        </ul>
      </div>
    </div>
  </div>
</div>
